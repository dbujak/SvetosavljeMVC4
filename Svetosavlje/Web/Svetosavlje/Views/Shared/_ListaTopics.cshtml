@using System.Web.Configuration;
@using Svetosavlje.Interfaces.Classes;
@model Svetosavlje.Models.ListaModel

@if (Model.boolList)
{
    <ul>
        @foreach (MessageThread t in Model.ListaTopics)
        {
            <li> @Html.ActionLink(t.naziv, "Topic", "Lista", new { topicID = t.id, strTema = t.naziv }, null) (@Html.Encode(t.count)) : <a href="http://www.svetosavlje.org/listarhiva/Home.aspx/UserMessages?userId=@t.updaterID">@t.updater</a>, @t.datum.ToString() </li>
        }
    </ul>
}
else
{
    foreach (MessageThread topic in Model.ListaTopics)
    {
        
        <div>
            @Html.ActionLink(topic.naziv, "Topic", "Lista", new { topicID = topic.id, strTema = topic.naziv }, null) »
        </div>
        <div class="underline">
            Писац: @topic.updater
            - број порука: @topic.count
            – последња порука послана: @topic.datum
        </div>
    }
}