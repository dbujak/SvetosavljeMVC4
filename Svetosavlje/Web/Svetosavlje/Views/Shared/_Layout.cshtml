    <!--[if lt IE 9]>
	<script src="js/libs/html5-3.4-respond-1.1.0.min.js"></script>
	<![endif]-->
    <script type="text/javascript">
        $(function () {
            $('.tabs a:last').tab('show')
            $('.dropdown-toggle').dropdown()
            $('.carousel').carousel({ interval: 5000 })
        })
    </script>
    <script type="text/javascript">
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
            fjs.parentNode.insertBefore(js, fjs);
        } (document, 'script', 'facebook-jssdk'));
    </script>
</head>
<body>
    <!-- glavna navigacija -->
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active">@Html.ActionLink("Светосавље.орг", "Index", "Home")</li>
                        <li>@Html.ActionLink("Питање пастиру", "Index", "Pastir")</li>
                        <li>@Html.ActionLink("Пролог", "Index", "Prolog")</li>
                        <li>@Html.ActionLink("Молитве", "Molitve", "Home")</li>
                        <li>@Html.ActionLink("Листа", "Index", "Lista")</li>
                        <li>@Html.ActionLink("Библиотека", "Biblioteka", "Home")</li>
                        <li><a href="http://blogs.svetosavlje.org/vesti/">Вести</a></li>
                        <li><a href="http://www.svedokverni.org/">Мисија</a></li>
                        <li>@Html.ActionLink("Појање", "Pojanje", "Home")</li>
                        <li>@Html.ActionLink("Светиње", "Svetinje", "Home")</li>
                        <li>@Html.ActionLink("Ризнице", "Index", "Riznice")</li>
                        <li>@Html.ActionLink("Црквенословенски језик", "Crkvenoslovenski", "Home")</li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <!-- navbar -->
    <div class="container">
        <div class="HeaderSection">
            @if (IsSectionDefined("HeaderSection"))
            {
                @RenderSection("HeaderSection")
            }
            else
            {
                <!-- logo i slika oca Justina -->
                <div class="row">
                    <div class="span6">
                        <img src="http://dummyimage.com/530x150/666/fff&amp;text=slika+oca+justina+i+logo+svetosavlje+ide+ovde" width="60%">
                    </div>
                </div>
                <!-- row -->            }
        </div>
        <hr />

        @RenderBody()
    </div>
    <div id="fb-root">
    </div>
</body>
</html>
