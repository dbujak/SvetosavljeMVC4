    <!--[if lt IE 9]>
	<script src="js/libs/html5-3.4-respond-1.1.0.min.js"></script>
	<![endif]-->
    <script type="text/javascript">
        $(document).ready(function () {


        });
    </script>
    <script type="text/javascript">
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

</head>
<body>
    <!-- glavna navigacija -->
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li id="home">@Html.ActionLink("Светосавље.орг", "Index", "Home")</li>
                        <li id="pastir">@Html.ActionLink("Питање пастиру", "Index", "Pastir")</li>
                        <li id="prolog">@Html.ActionLink("Пролог", "Index", "Prolog")</li>
                        <li id="molitve">@Html.ActionLink("Молитве", "Index", "Molitve")</li>
                        <li id="lista">@Html.ActionLink("Листа", "Index", "Lista")</li>
                        <li id="biblioteka">@Html.ActionLink("Библиотека", "Biblioteka", "Home")</li>
                        <li><a href="http://blogs.svetosavlje.org/vesti/" target="_blank">Вести</a></li>
                        <li><a href="http://www.svedokverni.org/" target="_blank">Мисија</a></li>
                        <li id="pojanje">@Html.ActionLink("Појање", "Index", "Pojanje")</li>
                        <li id="svetinje">@Html.ActionLink("Светиње", "Index", "Svetinje")</li>
                        <li id="riznice">@Html.ActionLink("Ризнице", "Index", "Riznice")</li>
                        <li id="crkvenoslovenski">@Html.ActionLink("Црквенословенски језик", "Index", "Crkvenoslovenski")</li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <!-- Mark correct navigation link -->
    <script type="text/javascript">
        var svetosavljeNavLoc = "/" + window.location.pathname.toLowerCase();
        switch (true) {
            case (svetosavljeNavLoc.indexOf("pastir") > -1 ? true: false):
                $('#pastir').addClass('active');
                break;
            case (svetosavljeNavLoc.indexOf("prolog") > -1 ? true: false):
                $('#prolog').addClass('active');
                break;
            case (svetosavljeNavLoc.indexOf("molitve") > -1 ? true: false):
                $('#molitve').addClass('active');
                break;
            case (svetosavljeNavLoc.indexOf("lista") > -1 ? true: false):
                $('#lista').addClass('active');
                break;
            case (svetosavljeNavLoc.indexOf("biblioteka") > -1 ? true: false):
                $('#biblioteka').addClass('active');
                break;
            case (svetosavljeNavLoc.indexOf("pojanje") > -1 ? true: false):
                $('#pojanje').addClass('active');
                break;
            case (svetosavljeNavLoc.indexOf("svetinje") > -1 ? true: false):
                $('#svetinje').addClass('active');
                break;
            case (svetosavljeNavLoc.indexOf("riznice") > -1 ? true: false):
                $('#riznice').addClass('active');
                break;
            case (svetosavljeNavLoc.indexOf("crkvenoslovenski") > -1 ? true: false):
                $('#crkvenoslovenski').addClass('active');
                break;
            default:
                $('#home').addClass('active');
                break;
        }
    </script>


    <!-- navbar -->
    <div class="container">
        <div class="HeaderSection">
            @if (IsSectionDefined("HeaderSection"))
            {
                @RenderSection("HeaderSection")
            }
            else
            {
                <!-- logo i slika oca Justina -->
                <div class="row">
                    <div class="span6">
                        <img src="http://dummyimage.com/530x150/666/fff&amp;text=slika+oca+justina+i+logo+svetosavlje+ide+ovde" width="60%">
                    </div>
                </div>
                <!-- row -->            }
        </div>
        <hr />

        @RenderBody()
    </div>
    <div id="fb-root">
    </div>



</body>
</html>
